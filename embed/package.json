{
  "name": "embed",
  "version": "7.0.0-1",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production jalla build index.js --dir dist --base /embed",
    "start": "NODE_ENV=production jalla serve index.js --dir dist --base /embed",
    "dev": "jalla index.js --base /embed",
    "audit:npm": "npm audit",
    "test": "run-s test:lint test:deps",
    "test:lint": "eslint .",
    "test:browser": "browserify -t [babelify] test/browser/index.js | tape-run --port 5000 --keep-open | tap-format-spec",
    "test:deps": "dependency-check . -i @justifay/tachyons --no-dev"
  },
  "browser": {
    "assert": "nanoassert"
  },
  "browserslist": [
    "last 1 version",
    ">1%",
    "not dead"
  ],
  "browserify": {
    "transform": [
      [
        "@justifay/envlocalify",
        {
          "envfile": "./.env",
          "global": true
        }
      ]
    ]
  },
  "documentify": {
    "transform": [
      "./documents/base.js",
      "../beta/src/documentify/variables.js"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-preset-env": {
        "stage": 1,
        "features": {
          "nesting-rules": true
        }
      },
      "postcss-custom-media": {}
    }
  },
  "license": "gpl3",
  "dependencies": {
    "@justifay/api-factory-generator": "*",
    "@justifay/choo-plugins": "*",
    "@justifay/dialog-component": "*",
    "@justifay/grid": "*",
    "@justifay/icon-element": "*",
    "@justifay/link-element": "*",
    "@justifay/player-component": "*",
    "@justifay/playlist-component": "*",
    "@justifay/svg-image-placeholder": "*",
    "@justifay/tachyons": "*",
    "@justifay/theme-skins": "*",
    "@justifay/track-component": "*",
    "choo": "^7.1.0",
    "choo-devtools": "^3.0.4",
    "choo-service-worker": "^2.4.0",
    "nanologger": "^1.3.1",
    "swagger-client": "^3.18.4"
  }
}
